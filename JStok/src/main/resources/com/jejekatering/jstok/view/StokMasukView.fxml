<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<ScrollPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.jejekatering.jstok.controller.StokMasukController"
            fitToWidth="true" fitToHeight="true"
            styleClass="content-scroll" stylesheets="@../css/style.css"
            hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">

    <VBox spacing="24" style="-fx-padding: 8 8 24 8;">
        <VBox spacing="4">
            <Label text="Stok Masuk" styleClass="page-title"/>
            <Label text="Catat barang masuk dari supplier atau belanja" styleClass="text-secondary"/>
        </VBox>

        <!-- Ringkasan Hari Ini Cards -->
        <HBox spacing="16">
            <!-- Card 1: Input Hari Ini -->
            <VBox styleClass="stat-card-success" spacing="6" HBox.hgrow="ALWAYS">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <FontIcon iconLiteral="fth-edit-3" iconColor="#22C55E" iconSize="18"/>
                    <Label text="Input Hari Ini" styleClass="stat-label"/>
                </HBox>
                <Label fx:id="lblInputHariIni" text="0 Transaksi" styleClass="stat-value"/>
            </VBox>

            <!-- Card 2: Terakhir Masuk -->
            <VBox styleClass="stat-card-info" spacing="6" HBox.hgrow="ALWAYS">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <FontIcon iconLiteral="fth-package" iconColor="#8B5CF6" iconSize="18"/>
                    <Label text="Terakhir Masuk" styleClass="stat-label"/>
                </HBox>
                <Label fx:id="lblTerakhirMasuk" text="-" styleClass="stat-value" style="-fx-font-size: 16px;"/>
            </VBox>

            <!-- Card 3: Penginput -->
            <VBox styleClass="stat-card-warning" spacing="6" HBox.hgrow="ALWAYS">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <FontIcon iconLiteral="fth-user" iconColor="#F59E0B" iconSize="18"/>
                    <Label text="Penginput" styleClass="stat-label"/>
                </HBox>
                <Label fx:id="lblPenginput" text="-" styleClass="stat-value"/>
            </VBox>
        </HBox>

        <GridPane hgap="20" VBox.vgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints percentWidth="45"/>
                <ColumnConstraints percentWidth="55"/>
            </columnConstraints>

            <!-- Form Input -->
            <VBox styleClass="spatial-card" GridPane.columnIndex="0" spacing="20">
                <VBox spacing="4">
                    <Label text="Form Input Stok Masuk" styleClass="section-title"/>
                    <Label text="Isi form untuk mencatat barang masuk" styleClass="text-secondary" style="-fx-font-size: 12px;"/>
                </VBox>

                <VBox spacing="6">
                    <Label text="Pilih Bahan" styleClass="form-label"/>
                    <ComboBox fx:id="comboBahan" promptText="Pilih bahan baku" maxWidth="Infinity" styleClass="form-combo"/>
                </VBox>

                <GridPane hgap="16" vgap="6">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50"/>
                        <ColumnConstraints percentWidth="50"/>
                    </columnConstraints>
                    <VBox spacing="6" GridPane.columnIndex="0">
                        <Label text="Jumlah Masuk" styleClass="form-label"/>
                        <TextField fx:id="txtJumlah" promptText="0" styleClass="form-input"/>
                    </VBox>
                    <VBox spacing="6" GridPane.columnIndex="1">
                        <Label text="Tanggal Terima" styleClass="form-label"/>
                        <DatePicker fx:id="datePicker" maxWidth="Infinity" styleClass="form-date"/>
                    </VBox>
                </GridPane>

                <VBox spacing="6">
                    <Label text="Keterangan (Opsional)" styleClass="form-label"/>
                    <TextField fx:id="txtKeterangan" promptText="Asal supplier, catatan tambahan..." styleClass="form-input"/>
                </VBox>

                <Region VBox.vgrow="ALWAYS" minHeight="20"/>

                <Button text="Simpan Stok Masuk" styleClass="button-primary"
                        maxWidth="Infinity" prefHeight="48" onAction="#handleSimpan">
                    <graphic>
                        <FontIcon iconLiteral="fth-plus-circle" iconColor="white" iconSize="16"/>
                    </graphic>
                </Button>
            </VBox>

            <!-- Tabel Transaksi Hari Ini -->
            <VBox styleClass="spatial-card" GridPane.columnIndex="1" spacing="16">
                <HBox alignment="CENTER_LEFT" spacing="12">
                    <FontIcon iconLiteral="fth-list" iconColor="#8B5CF6" iconSize="18"/>
                    <VBox spacing="2">
                        <Label text="Transaksi Hari Ini" styleClass="section-title"/>
                        <Label text="Daftar input stok masuk hari ini" styleClass="text-secondary" style="-fx-font-size: 11px;"/>
                    </VBox>
                </HBox>

                <TableView fx:id="tblTransaksiHariIni" styleClass="modern-table" VBox.vgrow="ALWAYS" minHeight="280">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="colJam" text="Jam" prefWidth="70" minWidth="60"/>
                        <TableColumn fx:id="colNamaBahan" text="Nama Bahan" prefWidth="150" minWidth="120"/>
                        <TableColumn fx:id="colJumlah" text="Jumlah" prefWidth="100" minWidth="80"/>
                        <TableColumn fx:id="colOleh" text="Oleh" prefWidth="100" minWidth="80"/>
                    </columns>
                    <placeholder>
                        <VBox alignment="CENTER" spacing="8">
                            <FontIcon iconLiteral="fth-inbox" iconSize="32" iconColor="#AEAEB2"/>
                            <Label text="Belum ada transaksi hari ini" styleClass="text-secondary"/>
                        </VBox>
                    </placeholder>
                </TableView>
            </VBox>
        </GridPane>
    </VBox>
</ScrollPane>

