<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.jejekatering.jstok.controller.StokMasukController"
      spacing="20" style="-fx-padding: 30;" alignment="TOP_CENTER">

    <VBox alignment="CENTER_LEFT" maxWidth="600">
        <Label text="Catat Stok Masuk" styleClass="title-text"/>
        <Label text="Input barang belanjaan atau kiriman supplier." styleClass="subtitle-text"/>
    </VBox>

    <VBox styleClass="glass-card" maxWidth="600" spacing="15" style="-fx-padding: 30;">

        <VBox spacing="5">
            <Label text="Pilih Bahan Baku" styleClass="label"/>
            <ComboBox promptText="-- Pilih Bahan --" maxWidth="Infinity" styleClass="input-field"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Jumlah Masuk" styleClass="label"/>
            <TextField promptText="Contoh: 10" styleClass="input-field"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Tanggal Terima" styleClass="label"/>
            <DatePicker maxWidth="Infinity" styleClass="input-field"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Keterangan (Opsional)" styleClass="label"/>
            <TextField promptText="Asal supplier, dll..." styleClass="input-field"/>
        </VBox>

        <VBox prefHeight="10"/>

        <Button text="SIMPAN STOK MASUK" styleClass="button-login" maxWidth="Infinity"/>
    </VBox>

</VBox>