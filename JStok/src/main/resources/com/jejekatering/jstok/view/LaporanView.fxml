<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<ScrollPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.jejekatering.jstok.controller.LaporanController"
            fitToWidth="true" fitToHeight="true"
            styleClass="content-scroll" stylesheets="@../css/style.css"
            hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">

    <VBox spacing="24" style="-fx-padding: 8 8 24 8;">
        <HBox alignment="CENTER_LEFT" spacing="16">
            <VBox spacing="4" HBox.hgrow="ALWAYS">
                <Label text="Laporan Transaksi" styleClass="page-title"/>
                <Label text="Riwayat pergerakan stok masuk dan keluar" styleClass="text-secondary"/>
            </VBox>
        </HBox>

        <VBox styleClass="spatial-card" spacing="16">
            <HBox spacing="12" alignment="CENTER_LEFT">
                <Label text="Filter" styleClass="section-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <DatePicker promptText="Dari tanggal" styleClass="form-date" prefWidth="140"/>
                <DatePicker promptText="Sampai" styleClass="form-date" prefWidth="140"/>
                <ComboBox promptText="Jenis" styleClass="form-combo" prefWidth="120"/>
                <Button styleClass="button-secondary" text="Terapkan">
                    <graphic>
                        <FontIcon iconLiteral="fth-filter" iconSize="14"/>
                    </graphic>
                </Button>
                <Button styleClass="button-primary" text="Export">
                    <graphic>
                        <FontIcon iconLiteral="fth-download" iconColor="white" iconSize="14"/>
                    </graphic>
                </Button>
            </HBox>
        </VBox>

        <HBox spacing="16">
            <VBox styleClass="stat-card-mini" spacing="4" HBox.hgrow="ALWAYS">
                <HBox alignment="CENTER_LEFT" spacing="8">
                    <FontIcon iconLiteral="fth-arrow-up-circle" iconColor="#22C55E" iconSize="16"/>
                    <Label text="Total Masuk" styleClass="stat-label-mini"/>
                </HBox>
                <Label text="150 Item" styleClass="stat-value-mini" style="-fx-text-fill: #22C55E;"/>
            </VBox>
            <VBox styleClass="stat-card-mini" spacing="4" HBox.hgrow="ALWAYS">
                <HBox alignment="CENTER_LEFT" spacing="8">
                    <FontIcon iconLiteral="fth-arrow-down-circle" iconColor="#EF4444" iconSize="16"/>
                    <Label text="Total Keluar" styleClass="stat-label-mini"/>
                </HBox>
                <Label text="89 Item" styleClass="stat-value-mini" style="-fx-text-fill: #EF4444;"/>
            </VBox>
            <VBox styleClass="stat-card-mini" spacing="4" HBox.hgrow="ALWAYS">
                <HBox alignment="CENTER_LEFT" spacing="8">
                    <FontIcon iconLiteral="fth-activity" iconColor="#8B5CF6" iconSize="16"/>
                    <Label text="Transaksi" styleClass="stat-label-mini"/>
                </HBox>
                <Label text="45" styleClass="stat-value-mini" style="-fx-text-fill: #8B5CF6;"/>
            </VBox>
        </HBox>

        <VBox styleClass="spatial-card" VBox.vgrow="ALWAYS" spacing="0">
            <HBox alignment="CENTER_LEFT" style="-fx-padding: 0 0 16 0;">
                <Label text="Riwayat Transaksi" styleClass="section-title"/>
            </HBox>
            <TableView fx:id="laporanTable" VBox.vgrow="ALWAYS" styleClass="modern-table" minHeight="350">
                <columns>
                    <TableColumn fx:id="colTanggal" text="Tanggal" prefWidth="100" minWidth="90"/>
                    <TableColumn fx:id="colJenis" text="Jenis" prefWidth="80" minWidth="70"/>
                    <TableColumn fx:id="colNama" text="Nama Bahan" prefWidth="160" minWidth="120"/>
                    <TableColumn fx:id="colJumlah" text="Jumlah" prefWidth="80" minWidth="70"/>
                    <TableColumn fx:id="colUser" text="User" prefWidth="100" minWidth="80"/>
                    <TableColumn fx:id="colKeterangan" text="Keterangan" prefWidth="180" minWidth="120"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </VBox>
</ScrollPane>

