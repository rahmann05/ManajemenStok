<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.jejekatering.jstok.controller.LaporanController"
      spacing="20" style="-fx-padding: 20;">

    <HBox alignment="CENTER_LEFT" spacing="20">
        <VBox>
            <Label text="Laporan Transaksi" styleClass="title-text"/>
            <Label text="Riwayat stok masuk dan keluar." styleClass="subtitle-text"/>
        </VBox>
        <HBox HBox.hgrow="ALWAYS"/>
        <Button text="Export Excel" styleClass="button-login"/>
    </HBox>

    <TableView fx:id="laporanTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn text="Tanggal" prefWidth="150"/>
            <TableColumn text="Jenis" prefWidth="100"/>
            <TableColumn text="Nama Bahan" prefWidth="200"/>
            <TableColumn text="Jumlah" prefWidth="100"/>
            <TableColumn text="Oleh User" prefWidth="150"/>
            <TableColumn text="Keterangan" prefWidth="250"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

</VBox>