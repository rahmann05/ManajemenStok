<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.jejekatering.jstok.controller.LoginController"
           stylesheets="@../css/style.css"
           prefHeight="600.0" prefWidth="900.0">

    <Region styleClass="background-layer"/>

    <VBox styleClass="spatial-card"
          maxWidth="400" maxHeight="480"
          alignment="CENTER" spacing="25">

        <padding>
            <Insets top="40" right="40" bottom="40" left="40"/>
        </padding>

        <VBox alignment="CENTER" spacing="10">
            <StackPane style="-fx-background-color: #8B5CF6; -fx-background-radius: 16; -fx-padding: 12; -fx-max-width: 50;">
                <FontIcon iconLiteral="fth-package" iconSize="32" iconColor="white"/>
            </StackPane>
            <Label text="J STOK" styleClass="page-title"/>
            <Label text="Masuk untuk mengelola inventaris" style="-fx-text-fill: #64748B; -fx-font-size: 14px;"/>
        </VBox>

        <VBox prefHeight="10" />

        <VBox spacing="15">
            <VBox spacing="8">
                <Label text="Username" style="-fx-text-fill: #1E293B; -fx-font-weight: 700;"/>
                <TextField fx:id="usernameField" promptText="Masukkan username..." styleClass="input-field"/>
            </VBox>

            <VBox spacing="8">
                <Label text="Password" style="-fx-text-fill: #1E293B; -fx-font-weight: 700;"/>
                <PasswordField fx:id="passwordField" promptText="Masukkan password..." styleClass="input-field"/>
            </VBox>
        </VBox>

        <VBox prefHeight="10" />

        <Button text="MASUK SEKARANG" onAction="#onLoginButtonClick"
                styleClass="btn-primary" maxWidth="Infinity" prefHeight="45"/>

        <Label text="v2025.0.1 â€¢ Jeje Katering" style="-fx-text-fill: #94A3B8; -fx-font-size: 11px; -fx-padding: 10 0 0 0;"/>

    </VBox>

</StackPane>